extends layout.pug

prepend styles
    link(rel="stylesheet", href="/styles/index.css")
    link(rel="stylesheet", href="/styles/search.css")

prepend scripts
    script(src="/scripts/index.js")

block content
    section#search
        h1.title Profile Search:
        form(action="/search", method="get")
            input#search-box(type="search", name="place")
            input#search-btn(type="submit", value="search")
    section#links
        a.card(href="https://www.aif.adfa.edu.au/index.html", target="_blank")
            img(src="/assets/aif_logo.jpg", alt="")
            h2 AIF Project
            p An officially sourced database, including personal files, Embarkation and Nominal Rolls.
        a.card(href="https://www.awm.gov.au/", target="_blank")
            img(src="/assets/awm_logo.jpg", alt="")
            h2 Australian War Memorial
            p The Australian War Memorial combines a shrine, a world-class museum, and an extensive archive.
        a.card(href="http://www.naa.gov.au/", target="_blank")
            img(src="/assets/naa_logo.jpg", alt="")
            h2 National Archives Australia
            p The National Archives of Australia collects and preserves Australian Government records that reflect our history and identity.
        a.card(href="https://trove.nla.gov.au/", target="_blank")
            img(src="/assets/trove_logo.png", alt="")
            h2 Trove
            p Trove brings together content from libraries, museums, archives, and other collecting organisations big and small.
